{
    "extends": "@doctorlab/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@ui/*": ["../../packages/ui/src/*"],
            "@config/*": ["../../packages/config/src/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
